{% extends "admin.twig" %}
{% block content %} 
    <br />
    <div id="div-lista-produto">

        <div id="table-datatables">
            <div class="row">
                <div class="col s10">
                    <table id="data-table-simple" class="responsive-table display" cellspacing="0">
                        <thead>
                            <tr>
                                
                                <th>Nome</th>
                                <th>Contato</th>       
                                <th>Email</th>                     
                                <th>Relatórios</th>     
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                               
                                <th>Nome</th>
                                <th>Contato</th>  
                                <th>Email</th> 
                                <th>Relatórios</th>                                 </tr>
                        </tfoot>
                        <tbody>                        
                            {% for usu in usuarios %}                    
                                <tr>                                                   
                                   
                                    <td>{{ usu.usu_nome }}</td>
                                    <td>{{ usu.usu_contato }}</td>                                    
                                    <td>{{ usu.usu_email }}</td> 
                                    <td>
                                        <a target="_blank" href="{{BASE_URL}}/pedidos-app/rel-vendas-cliente.php?cli_codigo={{usu.usu_codigo}}">
                                            <i class="material-icons">local_printshop</i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}                         
                        </tbody>                    
                    </table>
                    <input type="hidden" id="BASE_URL" value="{{BASE_URL}}" />
                </div>
            </div>
        </div>   
    </div>
{% endblock content %}
