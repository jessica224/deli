{% extends "admin.twig" %}
{% block content %} 

    {% if USU_NIVEL == "ADM" %} 
        <br />
        <div id="div-lista-produto">
            <div class="row">
                <div class="col s6">
                    <a href="{{BASE_URL}}/usuarios/novo"><i class="material-icons">add_box
                        </i> Novo</a>  
                </div>
            </div>     

            <div id="table-datatables">
                <div class="row">
                    <div class="col s10">
                        <table id="data-table-simple" class="responsive-table display" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Contato</th>       
                                    <th>Email</th>                                       
                                    <th>Permissão</th>                                       
                                    <th>Ação</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Nome</th>
                                    <th>Contato</th>       
                                    <th>Email</th>    
                                    <th>Permissão</th>                                       
                                    <th>Ação</th>
                                </tr>
                            </tfoot>
                            <tbody>                        
                                {% for usu in usuarios %}                    
                                    <tr>                                                   
                                        <td>{{ usu.usu_nome }}</td>
                                        <td>{{ usu.usu_contato }}</td>
                                        <td>{{ usu.usu_email }}</td>
                                        <td>{% if usu.usu_nivel =="ADM"%}ADMINISTRADOR{% else %}FUNCIONARIO{% endif %}</td>

                                        <td>
                                            <a href="{{BASE_URL}}/usuarios/editar/{{usu.ID}}">
                                                <i class="material-icons">edit</i>
                                            </a>

                                            <a href="javascript:if(confirm('Deseja excluir este usuario ?')) {location='{{BASE_URL}}/usuarios/excluir/{{usu.ID}}';}">
                                                <i class="material-icons">delete_forever</i>
                                            </a>

                                        </td>
                                    </tr>
                                {% endfor %}                         
                            </tbody>                    
                        </table>
                        <input type="hidden" id="BASE_URL" value="{{BASE_URL}}" />
                    </div>
                </div>
            </div>   
        </div>
    {% endif %} 
{% endblock content %}
